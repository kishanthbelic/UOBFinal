<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/primaryTextColor"

    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editT_Register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/primaryDarkColor"
            android:textColorHint="@color/primaryDarkColor"
            android:textSize="20sp"
            app:met_baseColor="@color/primaryDarkColor"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primaryDarkColor"
            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editT_Register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:textColorHighlight="@color/primaryDarkColor"
            android:textColor="@color/primaryDarkColor"
            android:textColorHint="@color/primaryDarkColor"
            android:textSize="20sp"
            app:met_baseColor="@color/primaryDarkColor"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primaryDarkColor"
            app:met_singleLineEllipsis="true" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editT_Register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/primaryDarkColor"
            android:textColorHint="@color/primaryDarkColor"
            android:textSize="20sp"
            app:met_baseColor="@color/primaryDarkColor"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primaryDarkColor"
            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editT_Register_CPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/primaryDarkColor"
            android:textColorHint="@color/primaryDarkColor"
            android:textSize="20sp"
            app:met_baseColor="@color/primaryDarkColor"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primaryDarkColor"
            app:met_singleLineEllipsis="true" />




    </LinearLayout>
</android.support.v7.widget.CardView>